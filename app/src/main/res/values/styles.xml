<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="HomeTheme" parent="AppTheme">
        <item name="android:windowReenterTransition">@transition/home_transition</item>
    </style>

    <style name="DetailTheme" parent="AppTheme">
        <item name="android:windowReenterTransition">@transition/enter_transition</item>
    </style>
</resources>
